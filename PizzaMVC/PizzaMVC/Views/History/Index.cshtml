@model IEnumerable<PizzaMVC.Models.OrderDTO>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-white-50">History</h1>

<hr />

@if (Context.Session.GetString("Token") != null)
{
<div style="margin: 0 auto; display: flex; flex-direction:column;">
    @foreach (var item in Model)
    {
        @if (item.Total > 0)
        {
            <div style="margin: 0 auto; width: 30rem">
                <div style="display: flex; justify-content:center">
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><b>Email:</b> @Html.DisplayFor(model => item.Id)</li>
                            <li class="list-group-item">
                                <b>Delivery charge:</b> @Html.DisplayFor(model => item.DeliveryCharge) $
                            </li>
                            <li class="list-group-item"><b>Phone:</b> @Html.DisplayFor(model => item.Phone)</li>
                            <li class="list-group-item"><b>Address:</b> @Html.DisplayFor(model => item.Address)</li>
                        </ul>
                        <div class="card-body">
                            <h5 class="card-title text-white-50">Total price: @Html.DisplayFor(model => item.Total) $</h5>
                        </div>
                        <br />
                    </div>
                </div>
            </div>
        }
    }
    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-outline-success" })
</div>
}
else
{
    <h2 class="text-white-50">Please Log In before operating</h2>
}